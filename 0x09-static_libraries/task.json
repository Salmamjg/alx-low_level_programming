{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-pedantic",
                "-Werror",
                "-Wextra",
                "-c",
                "_putchar.c",
                "_islower.c",
                "_isalpha.c",
                "_abs.c",
                "_isupper.c",
                "_isdigit.c",
                "_strlen.c",
                "_puts.c",
                "_strcpy.c",
                "_atoi.c",
                "_strcat.c",
                "_strncat.c",
                "_strncpy.c",
                "_strcmp.c",
                "_memset.c",
                "_memcpy.c",
                "_strchr.c",
                "_strspn.c",
                "_strpbrk.c",
                "_strstr.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "create_library",
            "type": "shell",
            "command": "ar",
            "args": [
                "rcs",
                "libmy.a",
                "*.o"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
